<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:background="#fafafa"
    android:paddingTop="@dimen/bj_15dp"
    android:id="@+id/rl_bg">

    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/iv_img"
        android:layout_width="@dimen/bj_100dp"
        android:layout_height="@dimen/bj_100dp"
        android:scaleType="centerCrop" />

    <TextView

        android:layout_marginRight="70dp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:maxLines="2"
        android:text=""
        android:layout_toLeftOf="@+id/tv_order_goods_price"
        android:textColor="#ff333333"
        android:textSize="14sp" />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_marginRight="70dp"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:maxLines="2"
        android:text=""
        android:layout_toLeftOf="@+id/tv_order_goods_price"
        android:textColor="#fc6f48"
        android:textSize="14sp" />




    <ImageView
        android:text="1"
        android:layout_marginBottom="@dimen/bj_18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/img"
        android:padding="4dp"
        android:src="@drawable/live_shop"
        android:layout_width="@dimen/bj_36dp"
        android:layout_height="@dimen/bj_36dp" />

    <View

        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE" />
</RelativeLayout>