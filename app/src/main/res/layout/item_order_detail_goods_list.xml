<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/bj_10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_order_goods_icon"
        android:layout_width="@dimen/bj_81dp"
        android:layout_height="@dimen/bj_81dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_order_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_17dp"
        android:layout_toRightOf="@+id/iv_order_goods_icon"
        android:maxLines="2"
        android:textColor="#ff333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_order_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/my_color_999999"
        android:layout_alignBottom="@+id/iv_order_goods_icon"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_order_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_17dp"
        android:layout_toRightOf="@+id/iv_order_goods_icon"
        android:layout_alignBottom="@+id/iv_order_goods_icon"
        android:textColor="@color/my_color_999999"
        android:textSize="13sp" />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/bj_10dp"
        android:layout_below="@+id/tv_order_goods_num"
        android:layout_height="0.5dp"
        android:background="#EEEEEE"/>
</RelativeLayout>