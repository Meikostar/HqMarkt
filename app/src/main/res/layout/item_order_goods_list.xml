<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/bj_15dp"
    android:paddingRight="@dimen/bj_15dp">

    <ImageView
        android:id="@+id/iv_order_goods_icon"
        android:layout_width="@dimen/bj_75dp"
        android:layout_height="@dimen/bj_75dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_order_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_20dp"
        android:layout_toRightOf="@+id/iv_order_goods_icon"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/tv_order_goods_price"
        android:textColor="#ff333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_order_goods_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_goods_name"
        android:layout_marginLeft="@dimen/bj_20dp"
        android:layout_toRightOf="@+id/iv_order_goods_icon"
        android:textColor="#ff333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_order_goods_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_order_goods_params"
        android:layout_marginLeft="@dimen/bj_20dp"
        android:layout_toRightOf="@+id/iv_order_goods_icon"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_order_goods_params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order_goods_icon"
        android:layout_marginLeft="@dimen/bj_20dp"
        android:layout_toRightOf="@+id/iv_order_goods_icon"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_order_goods_price"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_order_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/bj_27dp"
        android:textColor="#ff999999"
        android:textSize="12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/iv_order_goods_icon"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/bj_15dp"
        android:background="#EEEEEE" />
</RelativeLayout>