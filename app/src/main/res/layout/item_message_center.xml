<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/bj_15dp"
    android:paddingTop="@dimen/bj_13dp"
    android:paddingRight="@dimen/bj_15dp"
    android:paddingBottom="@dimen/bj_13dp">

    <ImageView
        android:id="@+id/iv_message_icon"
        android:layout_width="@dimen/bj_39dp"
        android:layout_height="@dimen/bj_39dp"
        android:src="@mipmap/system_message" />

    <ImageView
        android:id="@+id/iv_message_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignRight="@+id/iv_message_icon"
        android:src="@drawable/shape_red_point" />

    <TextView
        android:id="@+id/tv_message_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_message_icon"
        android:text="系统消息"
        android:textColor="#ff212121"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_message_icon"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_message_icon"
        android:text="系统平台积分累计规则调整通知"
        android:textColor="#ff4b4b4b"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_message_type"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/bj_6dp"
        android:text="06-12  10:31"
        android:textColor="#ff999999"
        android:textSize="12sp" />
</RelativeLayout>