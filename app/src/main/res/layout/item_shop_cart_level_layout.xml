<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_item_shop_cart_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_marginRight="@dimen/bj_3dp"
            android:id="@+id/cb_item_shop_cart"
            style="@style/checkbox.theme"
            android:layout_width="@dimen/bj_33dp"
            android:layout_height="@dimen/bj_33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:padding="@dimen/bj_5dp" />

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/iv_item_shop_cart_cover"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/moren_sf" />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_shop_cart_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lines="2"
                android:lineSpacingExtra="1dp"
                android:textColor="@color/my_color_333333"
                android:textSize="@dimen/wz_13sp" />

            <TextView

                android:id="@+id/tv_item_shop_cart_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/my_color_999999"
                android:textSize="@dimen/wz_12sp" />

            <RelativeLayout
                android:layout_marginTop="58dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text=""
                    android:id="@+id/tv_item_shop_cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#fc6f48"
                    android:textSize="@dimen/wz_15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/bj_6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decrease"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/gwc_01" />

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:background="@drawable/shape_gray_line"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/my_color_666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/increase"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/gwc_02" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_line"/>
</LinearLayout>