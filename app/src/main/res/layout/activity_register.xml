<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5"
        android:layout_height="@dimen/bj_10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:id="@+id/tv_register_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:maxLength="11"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_67dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:inputType="phone"
            android:textColorHint="#ff838383"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:id="@+id/tv_register_icon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_register_icon_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_67dp"
            android:layout_marginRight="@dimen/bj_13dp"
            android:layout_toLeftOf="@+id/iv_register_icon_code"
            android:background="@null"
            android:hint="请输入图形验证码"
            android:textColorHint="#ff838383"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_register_icon_code"
            android:layout_width="@dimen/bj_81dp"
            android:layout_height="@dimen/bj_35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bj_20dp" />

        <View
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="@dimen/bj_28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="115dp"
            android:background="#eeeeee" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_register_note_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_67dp"
            android:layout_marginRight="@dimen/bj_13dp"
            android:layout_toLeftOf="@+id/tv_register_note_code"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColorHint="#ff838383"
            android:textSize="15sp" />

        <TextView
            android:padding="@dimen/bj_4dp"
            android:id="@+id/tv_register_note_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bj_15dp"
            android:text="获取验证码"
            android:textColor="#1a2fb0"
            android:textSize="13sp" />

        <View
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="@dimen/bj_28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="115dp"
            android:background="#eeeeee" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:id="@+id/tv_register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_67dp"
            android:background="@null"
            android:hint="请输入6位数密码"
            android:inputType="textPassword"
            android:maxLength="6"
            android:textColorHint="#ff838383"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:paddingTop="@dimen/bj_57dp">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_43dp"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:layout_marginTop="@dimen/bj_50dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@drawable/shape_radius_5_e10020"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_14dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_register_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:text="注册即视为同意 "
                android:textColor="#ff838383"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_register_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《注册协议》"
                android:textColor="#1a2fb0"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>