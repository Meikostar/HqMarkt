<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="171dp"

        app:indicator_height="6dp"
        app:indicator_margin="4dp"
        app:indicator_width="6dp"
        app:image_scale_type="fit_xy"
        app:is_auto_play="true"/>

    <com.hqmy.market.view.widgets.autoview.NoScrollGridView

        android:id="@+id/grid_content"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:background="@color/white"
        android:listSelector="@color/transparent"
        android:numColumns="5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/my_color_F5F5F5"/>




    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="@dimen/bj_12dp"
            android:layout_marginRight="@dimen/bj_12dp"
            android:layout_marginTop="@dimen/bj_13dp"
            android:layout_marginBottom="@dimen/bj_13dp"
            android:id="@+id/iv_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_75dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bg"
        android:gravity="center_vertical"
       android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/wz_17sp"
            android:textColor="@color/my_color_333333"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全球大牌"/>
        <TextView
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_14sp"
            android:text="更多"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView

            android:src="@drawable/arrow_right"
            android:layout_marginRight="12dp"
            android:layout_width="8dp"
            android:layout_height="11dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>


    </LinearLayout>
    <com.hqmy.market.view.widgets.autoview.NoScrollGridView

        android:id="@+id/grid_content1"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:background="@color/white"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/my_color_F5F5F5"/>
</LinearLayout>