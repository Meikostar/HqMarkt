<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">


    <include layout="@layout/layout_title_view" />

    <View
        android:layout_height="10dp"
        style="@style/divider_horizontal_f5f5f5_5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--直播类别-->
            <!--<include layout="@layout/layout_start_live_category" />-->
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_25dp"
                android:paddingLeft="@dimen/bj_10dp"
                android:text="直播分类"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <com.hqmy.market.view.widgets.NoScrollGridView
                android:visibility="gone"
                android:id="@+id/gv_start_live_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_20dp"
                android:layout_marginBottom="@dimen/bj_20dp"
                android:horizontalSpacing="13dp"
                android:numColumns="3"
                android:paddingLeft="@dimen/bj_10dp"
                android:paddingRight="@dimen/bj_10dp"
                android:verticalSpacing="20dp" />
            <RelativeLayout
                android:id="@+id/rl_contury"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_49dp"
                android:paddingLeft="@dimen/bj_15dp">

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/my_color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="国家" />

                <TextView
                    android:id="@+id/tv_contury"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/my_color_333333"
                    android:textSize="15sp"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/bj_80dp"/>
                <ImageView
                    android:layout_marginRight="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/bj_13dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/arr_right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/my_color_line"/>
            <RelativeLayout
                android:id="@+id/rl_brand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_49dp"
                android:paddingLeft="@dimen/bj_15dp">

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/my_color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="品牌" />

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/my_color_333333"
                    android:textSize="15sp"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/bj_80dp"/>
                <ImageView
                    android:layout_marginRight="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/bj_13dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/arr_right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/my_color_line"/>
            <RelativeLayout
                android:id="@+id/rl_categry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_49dp"
                android:paddingLeft="@dimen/bj_15dp">

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/my_color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="分类" />

                <TextView
                    android:id="@+id/tv_categry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/my_color_333333"
                    android:textSize="15sp"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/bj_80dp"/>
                <ImageView
                    android:layout_marginRight="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/bj_13dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/arr_right"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_100dp"
                android:background="@color/my_color_f6f6f6"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/bj_10dp"
                android:paddingRight="@dimen/bj_10dp"
                android:paddingBottom="@dimen/dp_10">

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="@dimen/bj_80dp"
                    android:layout_height="@dimen/bj_80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/upload_pic_default" />

                <EditText
                    android:id="@+id/et_des"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:background="@color/white"
                    android:gravity="top|left"
                    android:hint="添加封面标题，让粉丝容易找到你！"
                    android:padding="@dimen/bj_10dp"
                    android:textColor="@color/my_color_333333"
                    android:textColorHint="@color/my_color_999999"
                    android:textSize="@dimen/wz_14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_open_live"
                android:layout_width="225dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bj_40dp"
                android:background="@drawable/shape_radius_22_red"
                android:gravity="center"
                android:text="开启视频直播"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bj_17dp"
                android:text="你已经是一名主播了，开启你的主播之旅吧"
                android:textColor="#ff999999"
                android:textSize="12sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>