<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">


    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--直播类别-->
            <!--<include layout="@layout/layout_start_live_category" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_25dp"
                android:paddingLeft="@dimen/bj_10dp"
                android:text="直播分类"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <com.hqmy.market.view.widgets.NoScrollGridView
                android:id="@+id/gv_start_live_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_20dp"
                android:layout_marginBottom="@dimen/bj_20dp"
                android:horizontalSpacing="13dp"
                android:numColumns="3"
                android:paddingLeft="@dimen/bj_10dp"
                android:paddingRight="@dimen/bj_10dp"
                android:verticalSpacing="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_100dp"
                android:background="@color/my_color_f6f6f6"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/bj_10dp"
                android:paddingRight="@dimen/bj_10dp"
                android:paddingBottom="@dimen/dp_10">

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="@dimen/bj_80dp"
                    android:layout_height="@dimen/bj_80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/upload_pic_default" />

                <EditText
                    android:id="@+id/et_des"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:background="@color/white"
                    android:gravity="top|left"
                    android:hint="添加封面标题，让粉丝容易找到你！"
                    android:padding="@dimen/bj_10dp"
                    android:textColor="@color/my_color_333333"
                    android:textColorHint="@color/my_color_999999"
                    android:textSize="@dimen/wz_14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_open_live"
                android:layout_width="205dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bj_40dp"
                android:background="@drawable/shape_radius_22_red"
                android:gravity="center"
                android:text="开启视频直播"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bj_17dp"
                android:text="你已经是一名主播了，开启你的主播之旅吧"
                android:textColor="#ff999999"
                android:textSize="12sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>