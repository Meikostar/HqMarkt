<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_order_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_35dp">

        <TextView
            android:id="@+id/tv_item_order_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:drawableLeft="@mipmap/order_store"
            android:drawablePadding="@dimen/bj_5dp"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:textColor="#fff60004"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_order_goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_47dp"
        android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/tv_button_1"
            android:layout_width="@dimen/bj_80dp"
            android:layout_height="@dimen/bj_35dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@drawable/shape_radius_4_999999"
            android:gravity="center"
            android:textColor="#ff666666"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_button_2"
            android:layout_width="@dimen/bj_80dp"
            android:layout_height="@dimen/bj_35dp"
            android:layout_marginRight="@dimen/bj_17dp"
            android:background="@drawable/shape_radius_4_f60004"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#fff60004"
            android:textSize="15sp" />


    </LinearLayout>
</LinearLayout>