<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_color_white">

    <include layout="@layout/action_bar" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:background="@color/my_color_F5F5F5"
        android:id="@+id/consume_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants">

        <com.hqmy.market.view.widgets.autoview.CustomView
            android:id="@+id/consume_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/bj_54dp"
                    android:orientation="horizontal">
                    <ImageView

                        android:src="@drawable/hot"
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:textSize="@dimen/wz_15sp"
                        android:textColor="@color/my_color_333333"
                        android:layout_marginLeft="@dimen/bj_6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全球大牌"/>




                </LinearLayout>
                <com.hqmy.market.view.widgets.autoview.NoScrollGridView

                    android:id="@+id/grid_content"
                    android:layout_width="match_parent"
                    android:layout_height="159dp"
                    android:background="@color/my_color_F5F5F5"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:listSelector="@color/transparent"
                    android:numColumns="3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="@dimen/bj_54dp"
                    android:orientation="horizontal">
                    <ImageView

                        android:src="@drawable/hot"
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:textSize="@dimen/wz_15sp"
                        android:textColor="@color/my_color_333333"
                        android:layout_marginLeft="@dimen/bj_6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热单销售"/>




                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/consume_push_recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bj_10dp"/>
            </LinearLayout>
        </com.hqmy.market.view.widgets.autoview.CustomView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>